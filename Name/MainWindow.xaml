<Window x:Class="Name.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Name"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <converters:BooleanToYesNoConverter x:Key="YesNoConverter"/>
    </Window.Resources>
    <Grid>
        <DataGrid x:Name="BooksGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding AuthorName}" Width="*"/>
                <DataGridTextColumn Header="Год публикации" Binding="{Binding YearPublished}" Width="80"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="*"/>
                <DataGridTextColumn Header="Доступность" Binding="{Binding IsAvailable, Converter=={StaticResource YesNoConverter)}}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить" Click="AddBook_Click" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Редактировать" Click="EditBook_Click" HorizontalAlignment="Left" Margin="90,370,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Удалить" Click="DeleteBook_Click" HorizontalAlignment="Left" Margin="170,370,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="10,340,0,0" VerticalAlignment="Top" Width="200" TextChanged="SearchBox_TextChanged"/>
    </Grid>
</Window>
